{
  "name": "iamdual/sonic",
  "description": "A flexible web framework.",
  "homepage": "https://github.com/iamdual/sonic",
  "type": "project",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Ekin Karadeniz",
      "email": "iamdual@icloud.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-gettext": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Sonic\\": "core/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sonic\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "php ./vendor/bin/phpunit"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
